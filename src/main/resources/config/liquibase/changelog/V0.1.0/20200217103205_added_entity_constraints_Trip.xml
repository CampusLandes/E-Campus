<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Trip.
    -->
    <changeSet id="20200217103205-2" author="V0.1.0">

        <addForeignKeyConstraint baseColumnNames="start_localisation_id"
                                 baseTableName="trip"
                                 constraintName="fk_trip_start_localisation_id"
                                 referencedColumnNames="id"
                                 referencedTableName="localisation"/>

        <addForeignKeyConstraint baseColumnNames="end_localisation_id"
                                 baseTableName="trip"
                                 constraintName="fk_trip_end_localisation_id"
                                 referencedColumnNames="id"
                                 referencedTableName="localisation"/>

        <addForeignKeyConstraint baseColumnNames="driver_id"
                                 baseTableName="trip"
                                 constraintName="fk_trip_driver_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="trip_id"
                                 baseTableName="trip_passenger"
                                 constraintName="fk_trip_passenger_trip_id"
                                 referencedColumnNames="id"
                                 referencedTableName="trip"/>

        <addForeignKeyConstraint baseColumnNames="passenger_id"
                                 baseTableName="trip_passenger"
                                 constraintName="fk_trip_passenger_passenger_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

    </changeSet>
</databaseChangeLog>
