<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        Added the entity AddRequest.
    -->
    <changeSet id="change_unique_constraint" author="V0.1.0">
        <dropUniqueConstraint
            constraintName="unique_localisation_name"
            tableName="localisation"
            uniqueColumns="name"/>

        <dropUniqueConstraint
            constraintName="unique_localisation_localisation"
            tableName="localisation"
            uniqueColumns="localisation"/>

        <addUniqueConstraint
            columnNames="name, localisation"
            constraintName="unique_localisation"
            deferrable="true"
            disabled="true"
            initiallyDeferred="true"
            tableName="localisation"
            validate="true"/>
    </changeSet>
</databaseChangeLog>
